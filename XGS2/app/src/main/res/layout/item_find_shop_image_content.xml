<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_shop_image_item"
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:src="@mipmap/icon_find_default"
        />

    <TextView
        android:id="@+id/tv_shop_image_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_below="@id/iv_shop_image_item"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="4dp"
        android:text="小时光"
        />

    <TextView
        android:id="@+id/tv_shop_image_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:textColor="@color/pink"
        android:text="￥100"
        android:layout_below="@id/tv_shop_image_item_name"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="4dp"
        />

    <TextView
        android:id="@+id/tv_shop_image_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="@color/gray_light"
        android:text="销量： 100"
        android:layout_below="@id/tv_shop_image_item_name"
        android:layout_marginTop="24dp"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>