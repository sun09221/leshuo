<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:label="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_with_image" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_shape"
            android:orientation="vertical"
            android:showDividers="middle">

            <com.bigkoo.convenientbanner.ConvenientBanner
                android:id="@+id/banner_nearby_detail"
                android:layout_width="match_parent"
                android:layout_height="320dp">

            </com.bigkoo.convenientbanner.ConvenientBanner>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_nearby_detail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="昵称"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_nearby_detail_complaint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:src="@mipmap/icon_nearby_complaint" />

                </RelativeLayout>


                <include layout="@layout/include_nearby_item_info" />

                <TextView
                    android:id="@+id/tv_nearby_detail_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="乐说ID："
                    android:textColor="@color/gray_light"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tv_nearby_detail_head_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="地址"
                    android:textColor="@color/gray_light"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_nearby_Detail_photo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:drawableLeft="@mipmap/icon_dating_label"
                android:drawablePadding="48dp"
                android:drawableRight="@mipmap/icon_right_gray"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="10dp"
                android:text="@string/nearby_photo"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="20dp"
                    android:text="个性签名"
                    android:textColor="@color/main"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_nearby_detail_sign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="22dp"
                    android:drawableLeft="@mipmap/icon_dating_label"
                    android:drawablePadding="36dp"
                    android:gravity="center_vertical"
                    android:text="@string/nothing_left"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_nearby_detail_dynamic"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:drawableLeft="@mipmap/icon_dating_dynamic"
                android:drawablePadding="48dp"
                android:drawableRight="@mipmap/icon_right_gray"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="10dp"
                android:text="@string/nearby_dynamic"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="我的信息"
                    android:textColor="@color/main"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_nearby_detail_classify"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="12dp"
                    android:drawableLeft="@mipmap/icon_dating_industry"
                    android:drawablePadding="36dp"
                    android:gravity="center_vertical"
                    android:text="行业信息:"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_nearby_detail_occupation"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="12dp"
                    android:drawableLeft="@mipmap/icon_dating_industry"
                    android:drawablePadding="36dp"
                    android:gravity="center_vertical"
                    android:text="工作领域:"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/tv_nearby_detail_company"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="12dp"
                    android:drawableLeft="@mipmap/icon_dating_company"
                    android:drawablePadding="36dp"
                    android:gravity="center_vertical"
                    android:text="公司: "
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_nearby_detail_hometown"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="12dp"
                    android:drawableLeft="@mipmap/icon_dating_hometown"
                    android:drawablePadding="36dp"
                    android:gravity="center_vertical"
                    android:text="家乡:"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_nearby_detail_address"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="12dp"
                    android:drawableLeft="@mipmap/icon_dating_address"
                    android:drawablePadding="36dp"
                    android:gravity="center_vertical"
                    android:text="常去地址"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tv_nearby_detail_tag_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="我的标签"
                    android:textColor="@color/main"
                    android:textSize="14sp" />

                <!--label:background="@drawable/label_label_solid_radius_shape"-->
                <!--label:textColor="@color/label_label_dark"-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_nearby_detail_tag_title"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_nearby_detail_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="6dp"
                        android:src="@mipmap/icon_nearby_tag" />

                    <com.example.feng.xgs.ui.weight.LabelLayout
                        android:id="@+id/label_nearby_detail_tag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="34dp">

                    </com.example.feng.xgs.ui.weight.LabelLayout>
                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="我的兴趣"
                    android:textColor="@color/main"
                    android:textSize="14sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_nearby_detail_like"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:scrollbars="none">

                </android.support.v7.widget.RecyclerView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="我的问题"
                    android:textColor="@color/main"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_nearby_detail_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="@string/nothing_left"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_nearby_detail_respond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="不知道"
                    android:textColor="@color/gray"
                    android:textSize="13sp"
                    android:visibility="gone" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/tv_nearby_detail_message"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/main"
        android:gravity="center"
        android:text="@string/private_message"
        android:textColor="@color/white"
        android:textSize="15sp" />


</LinearLayout>