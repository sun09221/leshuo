<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp"
    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <ImageView
            android:id="@+id/iv_activity_item"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/icon_find_default"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/tv_activity_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="好时光"
            android:layout_toLeftOf="@+id/tv_activity_item_time"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toRightOf="@id/iv_activity_item"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="6dp"
            />


        <TextView
            android:id="@+id/tv_activity_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:text="2018-4-11"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            />

        <TextView
            android:id="@+id/tv_activity_item_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/gray_light"
            android:text="时光荏苒，流年似水，不经意间远去；岁月的流年尘封逝去的往事，看着庭前花开花落."
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@id/iv_activity_item"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_activity_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:text="地址"
            android:layout_alignBottom="@id/iv_activity_item"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/iv_activity_item"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="6dp"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        >

        <TextView
            android:id="@+id/tv_activity_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥100"
            android:textSize="12sp"
            android:textColor="@color/pink"
            android:layout_centerVertical="true"
            />


        <TextView
            android:id="@+id/tv_activity_item_sure"
            android:layout_width="78dp"
            android:layout_height="30dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:background="@drawable/blue_solid_circle_shape"
            android:layout_alignParentRight="true"
            android:text="@string/enroll"
            />
    </RelativeLayout>




</LinearLayout>