<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="26dp"
    android:layout_marginRight="26dp"
    android:layout_marginTop="20dp"
    android:background="@color/main"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="16dp"
    android:paddingBottom="12dp">


    <ImageView
        android:id="@+id/iv_account_item"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/icon_mine_account_we_chat"
        android:scaleType="centerCrop"/>


    <TextView
        android:id="@+id/tv_account_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_account_item"
        android:layout_marginLeft="16dp"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:text="@string/we_chat"
        android:layout_marginTop="4dp"
        />

    <TextView
        android:id="@+id/tv_account_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:text="电子银行"
        android:layout_toRightOf="@id/iv_account_item"
        android:layout_marginLeft="16dp"
        android:layout_alignBottom="@id/iv_account_item"
        />


    <TextView
        android:id="@+id/tv_account_item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_account_item"
        android:layout_marginLeft="14dp"
        android:layout_below="@id/iv_account_item"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="122345*****123"
        android:layout_marginTop="14dp"
        />
</RelativeLayout>