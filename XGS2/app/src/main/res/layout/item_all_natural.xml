<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_natural_item_head"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/icon_head_default"
            />

        <TextView
            android:id="@+id/tv_natural_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/iv_natural_item_head"
            android:text="搁浅\n男"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_natural_item_sex"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="女"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tv_natural_item_name"
            android:background="@color/green"
            android:lineSpacingExtra="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_natural_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="2018-8-10"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/iv_natural_item_head"
            android:lineSpacingExtra="10dp"
            android:layout_marginLeft="10dp"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>



    </RelativeLayout>

    <TextView
        android:id="@+id/tv_natural_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="心静自然凉"
        />


    <cn.bingoogolapple.photopicker.widget.BGANinePhotoLayout
        android:id="@+id/photo_natural_item_look"
        style="@style/MatchWrap"
        android:layout_marginTop="8dp"
        app:bga_npl_itemCornerRadius="0dp"
        app:bga_npl_itemSpanCount="3"
        app:bga_npl_itemWhiteSpacing="4dp"
        app:bga_npl_itemWidth="0dp"
        app:bga_npl_otherWhiteSpacing="30dp"
        app:bga_npl_placeholderDrawable="@mipmap/bga_pp_ic_holder_light"
        app:bga_npl_showAsLargeWhenOnlyOne="true"/>


    <!--<TextView-->
        <!--android:id="@+id/tv_natural_item_circle"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textSize="12sp"-->
        <!--android:textColor="@color/black"-->
        <!--android:background="@drawable/gray_light_solid_radius_shape"-->
        <!--android:text="圈子: 雨后的故事"-->
        <!--android:paddingLeft="12dp"-->
        <!--android:paddingRight="12dp"-->
        <!--android:paddingBottom="6dp"-->
        <!--android:paddingTop="6dp"-->
        <!--android:layout_marginTop="8dp"/>-->
    <RelativeLayout
        android:id="@+id/voice_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<Button
    android:id="@+id/voice_button"
    android:layout_width="300dp"
    android:layout_height="30dp"
    android:background="@drawable/voice"/>
        <ImageView
            android:id="@+id/voice_button_picture"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:layout_marginTop="2dp"
            android:background="@color/yellow"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/voice_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:text="60"
            android:layout_marginTop="3dp"
            android:textSize="18sp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="16dp"
        android:background="@color/background_color"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_natural_item_leave_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:drawableLeft="@mipmap/icon_natural_leave_message"
            android:drawablePadding="10dp"
            android:text="50"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_natural_item_give_a_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:drawableLeft="@mipmap/icon_natural_give_a_reward"
            android:drawablePadding="14dp"
            android:text="@string/give_a_reward"
            android:gravity="center_vertical"
            android:layout_centerInParent="true"
            android:visibility="gone"
            />


        <TextView
            android:id="@+id/tv_natural_item_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/natural_like_selector"
            android:drawablePadding="10dp"
            android:text="50"
            android:paddingRight="20dp"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/tv_natural_item_leave_message"
           />
        <TextView
            android:id="@+id/tv_natural_item_type"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:background="@drawable/voice"
            android:text="原创"
            android:gravity="center_horizontal"
            android:padding="3dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/tv_natural_item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="被听0次"
            android:layout_toRightOf="@+id/tv_natural_item_type"
            android:padding="3dp"
            android:layout_marginLeft="20dp"
            />
    </RelativeLayout>

</LinearLayout>