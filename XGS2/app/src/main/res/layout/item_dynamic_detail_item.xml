<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_dynamic_detail_item"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@mipmap/icon_head_default"
            />

        <TextView
            android:id="@+id/tv_dynamic_detail_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/iv_dynamic_detail_item"
            android:text="搁浅\n女"
            android:layout_marginLeft="16dp"
            />
        <TextView
            android:id="@+id/tv_dynamic_detail_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:text="00:00"
            android:layout_marginLeft="16dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_dynamic_detail_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:text="这样的人都是需要再养遇的，仿佛重活一次。"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="6dp"
        />
</LinearLayout>