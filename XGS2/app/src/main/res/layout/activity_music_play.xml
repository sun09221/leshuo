<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/playmusic">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@mipmap/img3"
    android:scaleType="fitXY"
    android:id="@+id/play_music_bg"/>
    <ImageView
        android:id="@+id/iv_voiceplay_back"
        android:layout_width="32dp"
        android:layout_height="40dp"
        android:fitsSystemWindows="true"
        android:src="@mipmap/icon_back" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:id="@+id/iv_voiceplay_stop"
            android:src="@mipmap/stop"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_natural_item_head"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@mipmap/tale"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/tv_natural_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/iv_natural_item_head"
                android:text="搁浅\n男"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="10dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tv_natural_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="2018-8-8"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@+id/iv_natural_item_head"
                android:lineSpacingExtra="10dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tv_natural_item_sex"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="女"
                android:visibility="gone"
                android:background="@drawable/voice"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@+id/iv_natural_item_head"
                android:lineSpacingExtra="10dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tv_natural_item_constellation"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="狮子座"
                android:background="@drawable/voice"
                android:gravity="center"
                android:visibility="gone"
                android:layout_alignParentTop="true"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@+id/tv_natural_item_sex"
                android:lineSpacingExtra="10dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tv_natural_item_leave_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:drawableTop="@mipmap/musicshare"
                android:drawablePadding="10dp"
                android:text="分享"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:id="@+id/tv_natural_item_leave_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:drawableTop="@mipmap/pinjia"
                android:drawablePadding="10dp"
                android:text="评价"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@+id/tv_natural_item_leave_share"/>
            <TextView
                android:id="@+id/tv_natural_item_like_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:drawableTop="@drawable/natural_follow_selector"
                android:drawablePadding="8dp"
                android:text="关注"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@+id/tv_natural_item_leave_message"/>



        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_start"
            android:textColor="@color/white"
            android:text="00:00"
            />

        <SeekBar
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekbar"
            />

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_end"
            android:textColor="@color/white"
            android:text="05:00"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:id="@+id/comment_list"
        android:visibility="gone"
        android:layout_marginTop="280dp">
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@mipmap/comment_back"
        android:id="@+id/comment_back"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        />
        <TextView
            android:id="@+id/tv_natural_noitem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:text="暂无评论"
            android:visibility="gone"
            android:layout_below="@+id/comment_back"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="10dp"
            />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/comment_back"
        android:padding="15dp"
        android:background="@color/white"
        android:id="@+id/music_comment">
    </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</RelativeLayout>