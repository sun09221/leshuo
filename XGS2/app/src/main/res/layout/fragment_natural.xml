<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<include layout="@laytoolbar_titleitle"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/main"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/status_bar_height">

        <com.example.feng.xgs.ui.tab.ScrollTab
            android:id="@+id/tab_natural"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:orientation="vertical"
            app:lib_ui_stab_avag="true"
            app:lib_ui_stab_indicatorColor="@color/white"
            app:lib_ui_stab_indicatorPadding="20dp"
            app:lib_ui_stab_indicatorRadius="0.5dp"
            app:lib_ui_stab_indicatorType="translation"
            app:lib_ui_stab_indicatorWeight="1dp"
            app:lib_ui_stab_type="view_group" />


        <ImageView
            android:id="@+id/iv_natural_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/icon_editor_white" />
    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_natural"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>


</LinearLayout>