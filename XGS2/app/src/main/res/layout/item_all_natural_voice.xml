<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:id="@+id/iv_natural_item_head_layout"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_natural_item_head"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/tale"
            />

        <TextView
            android:id="@+id/tv_natural_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/iv_natural_item_head"
            android:text="搁浅\n男"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_natural_item_sex"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="女"
            android:background="@drawable/voice"
            android:gravity="center"
            android:visibility="gone"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/iv_natural_item_head"
            android:lineSpacingExtra="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_natural_item_constellation"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:visibility="gone"
            android:text="狮子座"
            android:background="@drawable/voice"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/tv_natural_item_sex"
            android:lineSpacingExtra="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_natural_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="2018-08-08"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:lineSpacingExtra="10dp"
            android:layout_marginLeft="10dp"/>

        <View
            android:layout_below="@+id/iv_natural_item_head"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/background_color"/>



    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playmusic"
            >
        <ImageView
            android:id="@+id/iv_natural_item_head_detail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/img2"
            />

        <TextView
            android:id="@+id/tv_natural_item_name_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/iv_natural_item_head_detail"
            android:text="动听的歌"
            android:maxEms="10"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_natural_item_type"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="原创"
            android:background="@drawable/voice"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_marginTop="26dp"
            android:layout_toRightOf="@+id/iv_natural_item_head_detail"
            android:lineSpacingExtra="10dp"
            android:layout_marginLeft="10dp"/>
        <RelativeLayout
            android:id="@+id/voice_layout"
            android:layout_toRightOf="@+id/iv_natural_item_head_detail"
            android:layout_below="@+id/tv_natural_item_type"
            android:layout_width="280dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/voice_button"
                android:layout_width="280dp"
                android:layout_height="30dp"
                android:background="@drawable/voice"/>
            <ImageView
                android:id="@+id/voice_button_picture"
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:layout_marginTop="1dp"
                android:background="@mipmap/play1"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/voice_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="00:00"
                android:layout_marginRight="15dp"
                android:layout_marginTop="3dp"
                android:textSize="18sp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_natural_item_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="被听0次"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="10dp"
            android:layout_marginLeft="10dp"/>
        </RelativeLayout>
        <View
            android:layout_below="@+id/playmusic"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/background_color"/>

        <RelativeLayout
            android:layout_below="@+id/playmusic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:id="@+id/tv_natural_item_leave_messages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:drawableLeft="@mipmap/icon_natural_leave_message"
                android:drawablePadding="10dp"
                android:text="(50)"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_natural_item_give_a_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:drawableLeft="@mipmap/icon_natural_give_a_reward"
                android:drawablePadding="14dp"
                android:text="@string/give_a_reward"
                android:gravity="center_vertical"
                android:layout_centerInParent="true"
                android:visibility="gone"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/natural_like_selector"
                android:id="@+id/tv_natural_item_likes_image"/>
            <TextView
                android:id="@+id/tv_natural_item_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="(0)"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
               android:layout_toRightOf="@+id/tv_natural_item_likes_image"
                />
            <ImageView
                android:id="@+id/tv_natural_item_share"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/share2"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                />

        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/background_color"/>
</LinearLayout>