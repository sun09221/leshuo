<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:showDividers="middle"
    android:divider="@drawable/divider_shape"
    >

    <include layout="@layout/toolbar"/>

    <RelativeLayout
        android:id="@+id/rl_mine_product_publish_type"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="产品类别"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_mine_product_publish_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/gray_light"
            android:layout_alignParentRight="true"
            android:text="类别"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/icon_triangle_down_gray"
            android:drawablePadding="10dp"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="产品名称"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/et_mine_product_publish_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/gray_light"
            android:hint="@string/edit_product_name"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:background="@color/transparent"
            android:gravity="end"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="产品价格"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/et_mine_product_publish_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/gray_light"
            android:hint="@string/edit_product_price"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:background="@color/transparent"
            android:gravity="end"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="10dp"
        >


        <ImageView
            android:id="@+id/iv_product_publish"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:src="@mipmap/icon_add_big_gray"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_product_image"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>


    <EditText
        android:id="@+id/et_mine_product_publish_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_product_info"
        android:background="@color/white"
        android:textSize="12sp"
        android:textColor="@color/gray_light"
        android:textColorHint="@color/gray_light"
        android:minLines="4"
        android:gravity="start"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/tv_mine_product_publish_save"
        style="@style/sure_blue_solid_circle"
        android:layout_marginTop="50dp"
        android:text="@string/save"
        />

</LinearLayout>