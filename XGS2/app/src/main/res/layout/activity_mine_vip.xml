<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="VIP优势介绍"
        android:visibility="gone"
        android:layout_margin="12dp"
        />

    <TextView
        android:id="@+id/tv_vip_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:visibility="visible"
        android:text="VIP优势介绍:点击查看详情"
        android:background="@color/white"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:drawableRight="@mipmap/icon_right_gray"
        />

    <Space
        android:layout_width="0dp"
        android:layout_height="10dp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:id="@+id/ly_vip_item_parent"
        android:background="@color/white">


        <LinearLayout
            android:id="@+id/ly_vip_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/vip_time_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/tv_vip_time_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一个月"
                android:textSize="15sp"
                android:textColor="@color/black"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/red_dark"
                    android:text="￥"
                    />


                <TextView
                    android:id="@+id/tv_vip_price_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="18sp"
                    android:textColor="@color/red_dark"
                    android:textStyle="bold"
                    />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_vip_center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/vip_time_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/tv_vip_time_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="三个月"
                android:textSize="15sp"
                android:textColor="@color/black"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/red_dark"
                    android:text="￥"
                    />
                <TextView
                    android:id="@+id/tv_vip_price_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="18sp"
                    android:textColor="@color/red_dark"
                    android:textStyle="bold"/>

            </LinearLayout>




        </LinearLayout>
        <LinearLayout
            android:id="@+id/ly_vip_center_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/vip_time_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/tv_vip_time_center_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="六个月"
                android:textSize="15sp"
                android:textColor="@color/black"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/red_dark"
                    android:text="￥"
                    />
                <TextView
                    android:id="@+id/tv_vip_price_center_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="18sp"
                    android:textColor="@color/red_dark"
                    android:textStyle="bold"/>

            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_vip_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/vip_time_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/tv_vip_time_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一年"
                android:textSize="15sp"
                android:textColor="@color/black"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/red_dark"
                    android:text="￥"
                    />

                <TextView
                    android:id="@+id/tv_vip_price_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="18sp"
                    android:textColor="@color/red_dark"
                    android:textStyle="bold"/>
            </LinearLayout>




        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="10dp"
        />

    <include layout="@layout/include_pay_type_select"/>


    <TextView
        android:id="@+id/tv_vip_sure"
        android:layout_width="168dp"
        android:layout_height="48dp"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:text="升级VIP"
        android:gravity="center"
        android:background="@drawable/blue_light_solid_circle_shape"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        />

</LinearLayout>