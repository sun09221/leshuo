<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/iv_circle_list_item"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@mipmap/icon_head_default"
        />

    <TextView
        android:id="@+id/tv_circle_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="强迫症"
        android:layout_toRightOf="@id/iv_circle_list_item"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/tv_circle_list_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/gray_light"
        android:text="1101001"
        android:layout_toRightOf="@id/iv_circle_list_item"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@id/iv_circle_list_item"
        />

    <TextView
        android:id="@+id/tv_circle_list_item_attention"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:background="@drawable/blue_original_solid_circle_shape"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="关注"
        android:gravity="center"
        />
</RelativeLayout>