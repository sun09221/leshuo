<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_mine_product_item"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/icon_find_default"
        />


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/tv_mine_product_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="小时光"/>

        <TextView
            android:id="@+id/tv_mine_product_item_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:text="小时光小时光小时光小时光小时光小时光小时光小时光"
            android:layout_centerVertical="true"
            android:maxLines="2"
            />


        <TextView
            android:id="@+id/tv_mine_product_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/price_color"
            android:text="￥14"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_mine_product_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="正在审核"
        android:background="@drawable/blue_light_solid_circle_shape"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"/>
</LinearLayout>