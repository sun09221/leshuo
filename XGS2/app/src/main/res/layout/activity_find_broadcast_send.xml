<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_with_save"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="约会时间: "/>


        <TextView
            android:id="@+id/et_broadcast_send_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_marginLeft="48dp"
            android:text="@string/edit_find_broadcast_time"
            android:textSize="12sp"
            android:textColor="@color/gray_light"
            android:padding="8dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="约会地点: "/>


        <EditText
            android:id="@+id/et_broadcast_send_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_marginLeft="48dp"
            android:hint="@string/edit_find_broadcast_address"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray_light"
            android:padding="8dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="约会内容: "/>


        <EditText
            android:id="@+id/et_broadcast_send_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_marginLeft="48dp"
            android:hint="@string/edit_find_broadcast_info"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray_light"
            android:padding="8dp"
            android:minLines="4"
            android:gravity="left"/>
    </LinearLayout>
</LinearLayout>