<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_logo"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="28dp"
                />
            <EditText
                android:id="@+id/et_login_name"
                style="@style/edit_white_solid"
                android:hint="@string/edit_sign_mobile"
                android:layout_marginTop="24dp"
                android:drawableLeft="@mipmap/icon_sign_name"
                />


            <EditText
                android:id="@+id/et_login_pwd"
                style="@style/edit_white_solid"
                android:hint="@string/edit_sign_pwd"
                android:drawablePadding="16dp"
                android:layout_marginTop="32dp"
                android:inputType="textPassword"
                android:drawableLeft="@mipmap/icon_sign_pwd"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/tv_login_remember"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_light"
                    android:textSize="12sp"
                    android:text="记住密码"
                    android:drawablePadding="10dp"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/yes_selector"
                    />

                <TextView
                    android:id="@+id/tv_login_forget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_light"
                    android:textSize="12sp"
                    android:text="@string/sign_forget"
                    android:layout_alignParentRight="true"
                    android:padding="8dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_login_sure"
                style="@style/sure_match"
                android:text="@string/sign_login"
                android:textColor="@color/white"
                android:layout_marginTop="24dp"
                android:background="@drawable/blue_solid_circle_shape"/>

            <TextView
                android:id="@+id/tv_login_register"
                style="@style/sure_match"
                android:text="@string/sign_register"
                android:textColor="@color/black"
                android:background="@drawable/gray_stroke_circle_shape"
                android:layout_marginTop="24dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="30dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/gray_light"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/login_other_model"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/gray_light"/>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="38dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                >

                <ImageView
                    android:id="@+id/iv_login_we_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_we_chat"
                    android:layout_centerInParent="true"/>



                <ImageView
                    android:id="@+id/iv_login_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_qq"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"/>

            </RelativeLayout>
        </LinearLayout>



    </ScrollView>




</LinearLayout>