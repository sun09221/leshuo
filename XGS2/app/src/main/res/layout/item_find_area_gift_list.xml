<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white"
    >


    <ImageView
        android:id="@+id/iv_gift_list_item"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:src="@mipmap/icon_find_default"
        />

    <TextView
        android:id="@+id/tv_gift_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="梦想小话筒"
        android:layout_toRightOf="@id/iv_gift_list_item"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/tv_gift_list_item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:text="一个小话筒 = 10次投票"
        android:layout_toRightOf="@id/iv_gift_list_item"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tv_gift_list_item_name"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/tv_gift_list_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="@color/red"
        android:text="￥12"
        android:layout_toRightOf="@id/iv_gift_list_item"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@id/iv_gift_list_item"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/iv_gift_list_item"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_gift_list_item_cut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_find_gift_cut"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_gift_list_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="1"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_gift_list_item_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_find_gift_add"
            />

    </LinearLayout>



</RelativeLayout>