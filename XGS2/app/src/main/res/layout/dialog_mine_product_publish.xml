<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_dark"
    >


    <ImageView
        android:id="@+id/iv_dialog_product_publish_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_find_shop_search_error"
        android:layout_gravity="end"
        android:padding="10dp"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_dialog_product_publish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </android.support.v7.widget.RecyclerView>


    <TextView
        android:id="@+id/tv_dialog_product_publish_sure"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/gray_circle_solid_shape"
        android:text="@string/sure"
        android:gravity="center"
        android:layout_margin="10dp"
        android:visibility="gone"
        />
</LinearLayout>