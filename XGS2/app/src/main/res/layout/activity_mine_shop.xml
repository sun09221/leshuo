<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:divider="@drawable/divider_shape"
    android:showDividers="middle">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名称"
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_mine_shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/transparent"
            android:gravity="end"
            android:hint="@string/edit_mine_shop_name"
            android:padding="6dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="LOGO"
            android:textColor="@color/gray"
            android:textSize="12sp" />


        <ImageView
            android:id="@+id/iv_mine_shop_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_add_big_gray" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址"
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_mine_shop_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/transparent"
            android:gravity="end"
            android:hint="@string/edit_mine_shop_address"
            android:padding="6dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="12sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_mine_shop_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/transparent"
            android:gravity="end"
            android:hint="@string/edit_mobile"
            android:padding="6dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="12sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_mine_shop_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="start"
        android:hint="@string/edit_mine_shop_info"
        android:minLines="4"
        android:padding="10dp"
        android:textColor="@color/gray"
        android:textColorHint="@color/gray_light"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/tv_mine_shop_sure"
        style="@style/sure_blue_solid_circle"
        android:layout_marginTop="40dp"
        android:text="@string/submit"/>
</LinearLayout>