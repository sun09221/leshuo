<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back_voice">

    <ImageView
        android:id="@+id/iv_voiceplay_back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:src="@mipmap/icon_back" />
    <ImageView
        android:id="@+id/iv_voiceplay_stop"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:src="@mipmap/icon_back" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="15dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_natural_item_head"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/icon_head_default"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/tv_natural_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/iv_natural_item_head"
            android:text="搁浅\n男"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_natural_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="2018-8-8"
            android:background="@drawable/voice"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/iv_natural_item_head"
            android:lineSpacingExtra="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_natural_item_sex"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="女"
            android:background="@drawable/voice"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@+id/iv_natural_item_head"
            android:lineSpacingExtra="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_natural_item_constellation"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="狮子座"
            android:background="@drawable/voice"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@+id/tv_natural_item_sex"
            android:lineSpacingExtra="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_natural_item_leave_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:drawableTop="@mipmap/icon_editor_white"
            android:drawablePadding="10dp"
            android:text="分享"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            />
            <TextView
                android:id="@+id/tv_natural_item_leave_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:drawableTop="@mipmap/icon_natural_leave_message"
                android:drawablePadding="10dp"
                android:text="评价"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@+id/tv_natural_item_leave_share"/>
        <TextView
            android:id="@+id/tv_natural_item_like_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:drawableTop="@mipmap/icon_natural_like_normal"
            android:drawablePadding="8dp"
            android:text="关注"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/tv_natural_item_leave_message"/>



    </RelativeLayout>
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/voiceplay_pr"
        android:layout_alignParentBottom="true"/>
</LinearLayout>
</RelativeLayout>