<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include layout="@layout/toolbar_with_save"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@drawable/divider_shape"
            android:showDividers="middle">



            <EditText
                android:id="@+id/et_activities_publish_price"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:hint="@string/edit_find_activities_price"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray_light"
                android:visibility="gone"
                />

            <EditText
                android:id="@+id/et_activities_publish_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:hint="@string/edit_find_activities_name"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray_light"
                />

            <EditText
                android:id="@+id/et_activities_publish_addres"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:hint="@string/edit_find_activities_address"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray_light"
                />

            <EditText
                android:id="@+id/et_activities_publish_time"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:hint="@string/edit_find_activities_time"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray_light"
                />

            <EditText
                android:id="@+id/et_activities_publish_mobile"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:hint="@string/edit_find_activities_mobile"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray_light"
                />



            <RelativeLayout
                android:id="@+id/ly_activities_publish_model"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="@color/white"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="付费选择"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/tv_activities_publish_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/icon_triangle_down_gray"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    />
            </RelativeLayout>

            <EditText
                android:id="@+id/et_activities_publish_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="left"
                android:padding="10dp"
                android:hint="@string/edit_find_activities_info"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray_light"
                android:minLines="2"
                />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_activities_publish_detail"
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:src="@mipmap/icon_add_big_gray"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text="@string/upload_find_activities_image"
                    android:layout_marginLeft="24dp"/>
            </LinearLayout>


            <EditText
                android:id="@+id/et_activities_publish_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="left"
                android:padding="10dp"
                android:hint="@string/edit_find_activities_detail"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray_light"
                android:minLines="6"
                />
        </LinearLayout>
    </ScrollView>



</LinearLayout>