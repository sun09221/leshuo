<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_dating_add_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@mipmap/icon_dating_food"
        android:scaleType="center"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >


        <ImageView
            android:id="@+id/iv_dating_add_item_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_dating_campaign_append"
            />

        <TextView
            android:id="@+id/tv_dating_append_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/gray_light"
            android:text="添加你的个人签名"
            android:layout_marginLeft="14dp"
            />
    </LinearLayout>



</LinearLayout>