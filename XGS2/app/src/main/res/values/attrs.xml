<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!--cardSlidView 自定义属性-->
    <declare-styleable name="card">
        <attr name="itemMarginTop" format="dimension" />
        <attr name="bottomMarginTop" format="dimension" />
        <attr name="yOffsetStep" format="dimension" />
        <attr name="widthHeightRate" format="float" />
    </declare-styleable>

    <!--tabScroll 自定义属性-->
    <declare-styleable name="lib_ui_ScrollTab">
        <!--设置布局是否继承View-->
        <attr name="lib_ui_stab_type">
            <enum name="view" value="0" />
            <enum name="view_group" value="1" />
        </attr>

        <attr name="lib_ui_stab_titles" format="string" />

        <!--tab是否滑动-->
        <attr name="lib_ui_stab_avag" format="boolean" />

        <attr name="lib_ui_stab_padding" format="dimension" />

        <!--下划线滑动样式-->
        <attr name="lib_ui_stab_indicatorType">
            <enum name="trend" value="0" />
            <enum name="translation" value="1" />
            <enum name="none" value="2" />
        </attr>

        <attr name="lib_ui_stab_textNormalColor" format="color" />
        <attr name="lib_ui_stab_textSelectColor" format="color" />
        <attr name="lib_ui_stab_textSize" format="integer" />
        <attr name="lib_ui_stab_indicatorColor" format="color" />
        <attr name="lib_ui_stab_indicatorWidth" format="dimension" />
        <attr name="lib_ui_stab_indicatorWeight" format="dimension" />
        <attr name="lib_ui_stab_indicatorRadius" format="dimension" />
        <attr name="lib_ui_stab_indicatorPadding" format="dimension" />
        <attr name="lib_ui_stab_duration" format="integer" />
    </declare-styleable>


    <!--标签 自定义属性-->
    <declare-styleable name="label">
        <attr name="vertical_margin" format="dimension" />
        <attr name="horizontal_margin" format="dimension" />
        <attr name="text_size" format="dimension" />
        <attr name="text_color" format="color" />
        <attr name="background" format="reference" />
    </declare-styleable>



    <!-- ========================  以下为聊天UI的自定义属性 ====================-->
    <!-- 按钮自定义属性 -->
    <declare-styleable name="StateButton">
        <!--text color-->
        <attr name="normalTextColor" format="color|reference" />
        <attr name="pressedTextColor" format="color|reference" />
        <attr name="unableTextColor" format="color|reference" />

        <!--stroke width and color, dash width, dash gap-->
        <attr name="strokeDashWidth" format="dimension|reference" />
        <attr name="strokeDashGap" format="dimension|reference" />
        <attr name="normalStrokeWidth" format="dimension|reference" />
        <attr name="pressedStrokeWidth" format="dimension|reference" />
        <attr name="unableStrokeWidth" format="dimension|reference" />
        <attr name="normalStrokeColor" format="color|reference" />
        <attr name="pressedStrokeColor" format="color|reference" />
        <attr name="unableStrokeColor" format="color|reference" />

        <!--background color-->
        <attr name="normalBackgroundColor" format="color|reference" />
        <attr name="pressedBackgroundColor" format="color|reference" />
        <attr name="unableBackgroundColor" format="color|reference" />

        <!--background radius-->
        <attr name="radius" format="dimension|reference" />
        <attr name="round" format="boolean|reference" />

        <!--animation duration-->
        <attr name="animationDuration" format="integer|reference" />
    </declare-styleable>

    <declare-styleable name="BubbleView">
        <attr name="arrowWidth" format="dimension" />
        <attr name="angle" format="dimension" />
        <attr name="arrowHeight" format="dimension" />
        <attr name="arrowPosition" format="dimension" />
        <attr name="bubbleColor" format="color" />
        <attr name="arrowLocation" format="enum">
            <enum name="left" value="0x00" />
            <enum name="right" value="0x01" />
            <enum name="top" value="0x02" />
            <enum name="bottom" value="0x03" />
        </attr>
    </declare-styleable>
    <!-- ========================  聊天UI的自定义属性结束  ====================-->
</resources>